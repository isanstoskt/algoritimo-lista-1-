#include <stdio.h>

int main() {
    int vetor[8];
    int x, y;

    printf("Digite os 8 valores do vetor:\n");
    for (int i = 0; i < 8; i++) {
        printf("Digite o valor %d: ", i + 1);
        scanf("%d", &vetor[i]);
    }
 
    printf("Digite os valores de X e Y (entre 0 e 7): ");
    scanf("%d %d", &x, &y);

    if (x >= 0 && x < 8 && y >= 0 && y < 8) {
        // Calculando a soma dos valores nas posições X e Y
        int soma = vetor[x] + vetor[y];
        printf("A soma dos valores nas posições %d e %d é: %d\n", x, y, soma);
    } else {
        printf("Valores de X e/ou Y fora do intervalo permitido.\n");
    }

    return 0;
}
